
          
          	<table class="answer_name">
			<tr><th style="text-align:left;"><%=t('question.options')%></th></tr> <br>
			
			<%@answers.each do|answer|%>
			<tr><td>
			<%= fields_for "answer[]", answer do |answer_fields| %>
				<%= answer_fields.hidden_field :id %>
				<%= answer_fields.text_field :name, :readonly=>true,:style=>"width:115px; height:19px; border:#d1d1d1 1px solid;",:class=>'validate[required,funcCall[checkHELLO]] text-input'%>
			<%end%>
			<%= hidden_field_tag('seen[]', answer.id) %>
			<%= check_box_tag "is_answer[]", answer.id, answer.is_answer==1 ? true : false, :style=>"margin-left: 10px; margin-right: 5px;" %><br>
			</td></tr>
			<%end%>
			
		</table>